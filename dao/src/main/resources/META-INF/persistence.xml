<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="project" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.github.nastyasivko.project_final.dao.entity.ApprovedOrdersEntity</class>
        <class>com.github.nastyasivko.project_final.dao.entity.CostRoomsEntity</class>
        <class>com.github.nastyasivko.project_final.dao.entity.DeniedOrdersEntity</class>
        <class>com.github.nastyasivko.project_final.dao.entity.HotelRoomEntity</class>
        <class>com.github.nastyasivko.project_final.dao.entity.LoginUsersEntity</class>
        <class>com.github.nastyasivko.project_final.dao.entity.UserEntity</class>
        <class>com.github.nastyasivko.project_final.dao.entity.UserOrderEntity</class>
        <class>com.github.nastyasivko.project_final.dao.entity.NewOrdersEntity</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/schema_for_project_final?createDatabaseIfNotExist=true&amp;logger=com.mysql.cj.log.StandardLogger&amp;profileSQL=true&amp;useUnicode=true&amp;serverTimezone=UTC&amp;useSSL=true&amp;verifyServerCertificate=false&amp;characterEncoding=utf8"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="admin"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.cache.region.factory_class"
                      value="org.hibernate.cache.ehcache.EhCacheRegionFactory"/>
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.use_query_cache" value="true"/>
            <property name="hibernate.cache.auto_evict_collection_cache" value="true"/>
            <property name="net.sf.ehcache.configurationResourceName" value="ehcache.xml"/>
        </properties>
    </persistence-unit>
</persistence>

